<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recipe">

    <TextView
        android:id="@+id/Recipe_tv_recipe"
        android:layout_width="121dp"
        android:layout_height="54dp"
        android:layout_marginTop="15dp"
        android:text="Recipe"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toEndOf="@+id/Recipe_bt_return"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Recipe_bt_return"
        android:layout_width="89dp"
        android:layout_height="69dp"
        android:text="Return"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Recipe_tv_addRecipe"
        android:layout_width="136dp"
        android:layout_height="32dp"
        android:layout_marginEnd="31dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="31dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="8dp"
        android:text="Add Recipe"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/Recipe_tv_manageRecipe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Recipe_bt_return" />

    <TextView
        android:id="@+id/Recipe_tv_manageRecipe"
        android:layout_width="149dp"
        android:layout_height="32dp"
        android:layout_marginEnd="41dp"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="41dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="8dp"
        android:text="Manege Recipe"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Recipe_tv_addRecipe"
        app:layout_constraintTop_toBottomOf="@+id/Recipe_tv_recipe" />

    <ScrollView
        android:id="@+id/Recipe_sv_manageRcipe"
        android:layout_width="350dp"
        android:layout_height="432dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Recipe_tv_addRecipe">

        <LinearLayout
            android:id="@+id/Recipe_ll_foodItemLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>