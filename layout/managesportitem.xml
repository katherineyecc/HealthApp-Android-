<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sl_managesport"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:id="@+id/MSI_sv_manageSportItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/MSI_ll_manageSportItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/MSI_tv_manageSport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textSize="18sp" />

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/MSI_ll_manageCalorie"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/MSI_sv_manageSportItem"
        android:orientation="vertical"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/MSI_tv_manageCalorie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="18sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/MSI_ll_shareTime"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MSI_sv_manageSportItem"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/MSI_tv_shareTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/MSI_ll_remove"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/MSI_ll_manageCalorie"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        tools:ignore="RtlCompat">

        <Button
            android:id="@+id/MSI_bt_remove"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Remove"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>